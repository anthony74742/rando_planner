{% extends 'base.html.twig' %}

{% block title %}Hike{% endblock %}

{% block body %}
    <h1>Hike</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hike.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ hike.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hike.description }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ hike.location }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ hike.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ hike.longitude }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ hike.distance }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ hike.difficulty }}</td>
            </tr>
            <tr>
                <th>IsPublic</th>
                <td>{{ hike.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ hike.createdAt ? hike.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_hike_index') }}">back to list</a>

    <a href="{{ path('app_hike_edit', {'id': hike.id}) }}">edit</a>

    {{ include('hike/_delete_form.html.twig') }}
{% endblock %}

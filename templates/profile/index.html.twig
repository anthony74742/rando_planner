{% extends 'base.html.twig' %}

{% block title %}Paramètres du compte{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50">
        {{ include('_nav.html.twig') }}

        <div class="max-w-4xl mx-auto px-4 py-8">
            <div class="mb-6">
                <a href="{{ path('app_home') }}" class="inline-flex items-center text-gray-600 hover:text-green-600 transition">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    Retour
                </a>
            </div>

            <h1 class="text-3xl font-bold text-gray-900 mb-8">Paramètres du compte</h1>

            {# Messages flash #}
            {% for message in app.flashes('success') %}
                <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6">
                    {{ message }}
                </div>
            {% endfor %}

            {# Photo de profil #}
            <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Photo de profil</h2>

                <div class="flex items-start gap-6">
                    {# Avatar actuel #}
                    <div class="flex-shrink-0">
                        {% if user.avatar %}
                            <img
                                src="{{ asset('uploads/avatars/' ~ user.avatar) }}"
                                alt="Photo de profil"
                                class="w-24 h-24 rounded-full object-cover border-2 border-gray-200"
                            >
                        {% else %}
                            <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center border-2 border-gray-200 flex-shrink-0">
                                <span class="text-green-600 font-bold text-3xl">{{ user.email|first|upper }}</span>
                            </div>
                        {% endif %}
                    </div>

                    {# Formulaire d'upload #}
                    <div class="flex-1">
                        <form method="post" action="{{ path('app_profile_update_avatar') }}" enctype="multipart/form-data" class="space-y-4">
                            <div>
                                <label for="avatar" class="block text-sm font-medium text-gray-700 mb-2">
                                    Choisir une image
                                </label>
                                <input
                                    type="file"
                                    id="avatarFile"
                                    name="avatarFile"
                                    accept="image/*"
                                    class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100"
                                    required
                                >
                                <p class="text-xs text-gray-500 mt-1">JPG, PNG, GIF ou WebP. Taille max 5MB.</p>
                            </div>

                            <div class="flex gap-3">
                                <button type="submit" class="px-6 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition">
                                    Mettre à jour
                                </button>

                            </div>

                            <input type="hidden" name="_token" value="{{ csrf_token('update_avatar') }}">
                        </form>
                    </div>
                </div>
            </div>

            {# Informations du compte #}
            <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Informations du compte</h2>

                <form method="post" action="{{ path('app_profile_update_email') }}" class="space-y-4">
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            Adresse email
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            value="{{ user.email }}"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <div class="flex items-center gap-3">
                        <button type="submit" class="px-6 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition">
                            Mettre à jour l'email
                        </button>
                    </div>

                    <input type="hidden" name="_token" value="{{ csrf_token('update_email') }}">
                </form>
            </div>

            {# Changer le mot de passe #}
            <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Changer le mot de passe</h2>

                <form method="post" action="{{ path('app_profile_update_password') }}" class="space-y-4">
                    <div>
                        <label for="current_password" class="block text-sm font-medium text-gray-700 mb-2">
                            Mot de passe actuel
                        </label>
                        <input
                            type="password"
                            id="current_password"
                            name="current_password"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <div>
                        <label for="new_password" class="block text-sm font-medium text-gray-700 mb-2">
                            Nouveau mot de passe
                        </label>
                        <input
                            type="password"
                            id="new_password"
                            name="new_password"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <div>
                        <label for="confirm_password" class="block text-sm font-medium text-gray-700 mb-2">
                            Confirmer le nouveau mot de passe
                        </label>
                        <input
                            type="password"
                            id="confirm_password"
                            name="confirm_password"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <div class="flex items-center gap-3">
                        <button type="submit" class="px-6 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition">
                            Changer le mot de passe
                        </button>
                    </div>

                    <input type="hidden" name="_token" value="{{ csrf_token('update_password') }}">
                </form>
            </div>

            {# Statistiques #}
            <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Statistiques</h2>

                <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-3xl font-bold text-green-600 mb-1">{{ user.creator|length }}</div>
                        <div class="text-sm text-gray-600">Randonnées créées</div>
                    </div>
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-3xl font-bold text-green-600 mb-1">{{ user.hikeSessions|length }}</div>
                        <div class="text-sm text-gray-600">Sessions organisées</div>
                    </div>
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-3xl font-bold text-green-600 mb-1">{{ user.roles|length }}</div>
                        <div class="text-sm text-gray-600">Rôles</div>
                    </div>
                </div>
            </div>

            {# Zone dangereuse #}
            <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-red-200">
                <h2 class="text-xl font-semibold text-red-600 mb-4">Zone dangereuse</h2>

                <div class="space-y-4">
                    <p class="text-gray-600">
                        La suppression de votre compte est irréversible. Toutes vos randonnées et sessions seront définitivement supprimées.
                    </p>

                    <button
                        onclick="if(confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.')) { document.getElementById('delete-form').submit(); }"
                        class="px-6 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition"
                    >
                        Supprimer mon compte
                    </button>

                    <form id="delete-form" method="post" action="{{ path('app_profile_delete') }}" class="hidden">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_account') }}">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.email }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50">
        {# Navigation #}
        {{ include('_nav.html.twig') }}

        <div class="max-w-7xl mx-auto px-4 py-8">
            {# En-t√™te du profil #}
            <div class="bg-white rounded-lg shadow-sm p-8 mb-6">
                <div class="flex items-start gap-6">
                    <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                        <span class="text-green-600 font-bold text-4xl">{{ user.email|first|upper }}</span>
                    </div>

                    <div class="flex-1">
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ user.email }}</h1>
                        <div class="flex flex-wrap gap-2 mb-4">
                            {% for role in user.roles %}
                                <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded-full">
                            {{ role|replace({'ROLE_': ''})|lower|capitalize }}
                        </span>
                            {% endfor %}
                        </div>

                        {# Statistiques #}
                        <div class="flex gap-6 text-sm">
                            <div>
                                <span class="font-semibold text-gray-900">{{ user.creator|length }}</span>
                                <span class="text-gray-600">randonn√©e(s)</span>
                            </div>
                            <div>
                                <span class="font-semibold text-gray-900">{{ user.hikeSessions|length }}</span>
                                <span class="text-gray-600">session(s)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Onglets #}
            <div class="bg-white rounded-lg shadow-sm mb-6">
                <div class="border-b border-gray-200">
                    <nav class="flex gap-8 px-6">
                        <button class="py-4 border-b-2 border-green-600 text-green-600 font-medium" onclick="showTab('hikes')">
                            Mes randonn√©es
                        </button>
                        <button class="py-4 border-b-2 border-transparent text-gray-600 hover:text-gray-900 font-medium" onclick="showTab('sessions')">
                            Mes sessions
                        </button>
                    </nav>
                </div>
            </div>

            {# Contenu des onglets - Randonn√©es #}
            <div id="hikes-tab" class="tab-content">
                {% if user.creator|length > 0 %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for hike in user.creator %}
                            <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition">
                                <div class="w-full h-48 bg-gradient-to-br from-green-400 to-green-600 flex items-center justify-center">
                                    <span class="text-white text-5xl">ü•æ</span>
                                </div>

                                <div class="p-4">
                                    <div class="flex items-center justify-between mb-2">
                                        <h3 class="text-lg font-bold text-gray-900">{{ hike.title }}</h3>
                                        {% if not hike.isPublic %}
                                            <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">Priv√©</span>
                                        {% endif %}
                                    </div>

                                    {% if hike.description %}
                                        <p class="text-gray-600 text-sm mb-3 line-clamp-2">
                                            {{ hike.description|length > 80 ? hike.description|slice(0, 80) ~ '...' : hike.description }}
                                        </p>
                                    {% endif %}

                                    <div class="flex flex-wrap gap-2 text-xs text-gray-500 mb-4">
                                        <span>üìç {{ hike.location }}</span>
                                        <span>üìè {{ hike.distance }} km</span>
                                        <span>‚è±Ô∏è {{ hike.duration }}</span>
                                    </div>

                                    <div class="flex gap-2">
                                        <a href="{{ path('app_hike_show', {'id': hike.id}) }}" class="flex-1 px-4 py-2 bg-green-600 text-white text-center text-sm font-medium rounded-lg hover:bg-green-700 transition">
                                            Voir
                                        </a>
                                        <a href="{{ path('app_hike_edit', {'id': hike.id}) }}" class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition">
                                            Modifier
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="bg-white rounded-lg shadow-sm p-12 text-center">
                        <div class="text-6xl mb-4">ü•æ</div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Aucune randonn√©e cr√©√©e</h3>
                        <p class="text-gray-600 mb-6">Commencez √† partager vos parcours pr√©f√©r√©s avec la communaut√©</p>
                        <a href="{{ path('app_hike_new') }}" class="inline-block px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition">
                            Cr√©er ma premi√®re randonn√©e
                        </a>
                    </div>
                {% endif %}
            </div>

            {# Contenu des onglets - Sessions #}
            <div id="sessions-tab" class="tab-content hidden">
                {% if user.hikeSessions|length > 0 %}
                    <div class="space-y-4">
                        {% for session in user.hikeSessions %}
                            <div class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition">
                                <div class="flex items-start justify-between">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-bold text-gray-900 mb-2">
                                            Session - {{ session.hike.title }}
                                        </h3>
                                        <div class="flex flex-wrap gap-4 text-sm text-gray-600">
                                            <span>üìÖ {{ session.date|date('d/m/Y √† H:i') }}</span>
                                            <span>üë• {{ session.maxParticipants }} participants max</span>
                                            <span>üìç {{ session.hike.location }}</span>
                                        </div>
                                    </div>
                                    <a href="{{ path('app_hike_session_show', {'id': session.id}) }}" class="px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition">
                                        Voir
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="bg-white rounded-lg shadow-sm p-12 text-center">
                        <div class="text-6xl mb-4">üìÖ</div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Aucune session cr√©√©e</h3>
                        <p class="text-gray-600 mb-6">Organisez des sorties en groupe pour vos randonn√©es</p>
                        <a href="{{ path('app_hike_sessions') }}" class="inline-block px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition">
                            Voir les sessions
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <script>
        function showTab(tabName) {
            // Cacher tous les onglets
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.add('hidden');
            });

            // R√©initialiser tous les boutons
            document.querySelectorAll('nav button').forEach(btn => {
                btn.classList.remove('border-green-600', 'text-green-600');
                btn.classList.add('border-transparent', 'text-gray-600');
            });

            // Afficher l'onglet s√©lectionn√©
            document.getElementById(tabName + '-tab').classList.remove('hidden');

            // Mettre en surbrillance le bouton actif
            event.target.classList.remove('border-transparent', 'text-gray-600');
            event.target.classList.add('border-green-600', 'text-green-600');
        }
    </script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-green-50 to-white flex items-center justify-center px-4 py-12">
        <div class="max-w-md w-full">
            {# Logo/Titre #}
            <div class="text-center mb-8">
                <a href="{{ path('app_home') }}" class="inline-block text-4xl font-bold text-green-600 mb-2">
                    Randonnées
                </a>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">Bon retour !</h1>
                <p class="text-gray-600">Connectez-vous à votre compte</p>
            </div>

            {# Formulaire de connexion #}
            <div class="bg-white rounded-lg shadow-lg p-8">
                {# Message si déjà connecté #}
                {% if app.user %}
                    <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded-lg mb-6">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}
                        <a href="{{ path('app_logout') }}" class="underline font-medium">Se déconnecter</a>
                    </div>
                {% endif %}

                {# Message d'erreur #}
                {% if error %}
                    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post" class="space-y-6">
                    {# Email #}
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700 mb-2">
                            Adresse email
                        </label>
                        <input
                            type="email"
                            value="{{ last_username }}"
                            name="_username"
                            id="username"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                            autocomplete="email"
                            required
                            autofocus
                            placeholder="votre@email.com"
                        >
                    </div>

                    {# Password #}
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                            Mot de passe
                        </label>
                        <input
                            type="password"
                            name="_password"
                            id="password"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                            autocomplete="current-password"
                            required
                            placeholder="••••••••"
                        >
                    </div>

                    {# CSRF Token #}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# Remember Me (optionnel - décommentez si configuré) #}
                    {#
                    <div class="flex items-center gap-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me" class="w-4 h-4 text-green-600 border-gray-300 rounded focus:ring-green-500">
                        <label for="_remember_me" class="text-sm text-gray-700">
                            Se souvenir de moi
                        </label>
                    </div>
                    #}

                    {# Submit Button #}
                    <button type="submit" class="w-full px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition shadow-sm">
                        Se connecter
                    </button>
                </form>

                {# Lien vers register #}
                <div class="mt-6 text-center">
                    <p class="text-gray-600">
                        Pas encore de compte ?
                        <a href="{{ path('app_register') }}" class="text-green-600 hover:text-green-700 font-medium">
                            S'inscrire
                        </a>
                    </p>
                </div>
            </div>

            {# Retour à l'accueil #}
            <div class="mt-6 text-center">
                <a href="{{ path('app_home') }}" class="text-gray-600 hover:text-green-600 transition">
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
{% endblock %}

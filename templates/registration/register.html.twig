{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-green-50 to-white flex items-center justify-center px-4 py-12">
        <div class="max-w-md w-full">
            {# Logo/Titre #}
            <div class="text-center mb-8">
                <a href="{{ path('app_home') }}" class="inline-block text-4xl font-bold text-green-600 mb-2">
                    Randonnées
                </a>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">Créer un compte</h1>
                <p class="text-gray-600">Rejoignez la communauté des randonneurs</p>
            </div>

            {# Formulaire d'inscription #}
            <div class="bg-white rounded-lg shadow-lg p-8">
                {{ form_errors(registrationForm, {'attr': {'class': 'bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6'}}) }}

                {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

                {# Email #}
                <div>
                    {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent', 'placeholder': 'votre@email.com'}}) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                </div>

                {# Password #}
                <div>
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent', 'placeholder': '••••••••'}}) }}
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                    <p class="text-xs text-gray-500 mt-1">Minimum 6 caractères</p>
                </div>

                {# Agree Terms #}
                <div class="flex items-start gap-3">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'w-4 h-4 text-green-600 border-gray-300 rounded focus:ring-green-500 mt-1'}}) }}
                    <div class="flex-1">
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-sm text-gray-700'}}) }}
                        {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                    </div>
                </div>

                {# Submit Button #}
                <button type="submit" class="w-full px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition shadow-sm">
                    S'inscrire
                </button>

                {{ form_end(registrationForm) }}

                {# Lien vers login #}
                <div class="mt-6 text-center">
                    <p class="text-gray-600">
                        Vous avez déjà un compte ?
                        <a href="{{ path('app_login') }}" class="text-green-600 hover:text-green-700 font-medium">
                            Se connecter
                        </a>
                    </p>
                </div>
            </div>

            {# Retour à l'accueil #}
            <div class="mt-6 text-center">
                <a href="{{ path('app_home') }}" class="text-gray-600 hover:text-green-600 transition">
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
{% endblock %}
